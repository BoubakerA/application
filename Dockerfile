FROM ubuntu:22.04

# Install Python
RUN apt-get -y update && \
    apt-get install -y python3-pip

COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/
# Install project dependencies
COPY pyproject.toml .
# RUN uv add -r requirements.txt
RUN uv sync
COPY src/ src/
COPY train.py .
COPY app/ ./app

CMD ["bash", "-c", "./app/run.sh"]
